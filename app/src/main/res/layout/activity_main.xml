<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvScreen"
        android:layout_width="355dp"
        android:layout_height="116dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="165dp"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="390dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="16dp"
        android:columnCount="4"
        android:padding="10dp"
        android:rowCount="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- First Row -->
        <Button
            android:id="@+id/btAc"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="?attr/colorPrimary"
            android:text="AC"
            android:textColor="#edb616"
            android:textSize="18sp"
            android:onClick="clearAll" />

        <Button
            android:id="@+id/btC"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="?attr/colorPrimary"
            android:text="C"
            android:textColor="#edb616"
            android:textSize="18sp"
            android:onClick="clearLast" />

        <Button
            android:id="@+id/btPercent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="?attr/colorPrimary"
            android:text="%"
            android:textColor="#edb616"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btDivide"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="?attr/colorPrimary"
            android:text="รท"
            android:textColor="#edb616"
            android:textSize="18sp"
            android:onClick="pressedButton" />

        <!-- Second Row -->
        <Button
            android:id="@+id/bt7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="?attr/colorPrimary"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:onClick="pressedButton" />

        <Button
            android:id="@+id/bt8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="?attr/colorPrimary"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:onClick="pressedButton" />

        <Button
            android:id="@+id/bt9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="?attr/colorPrimary"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:onClick="pressedButton" />

        <Button
            android:id="@+id/btMultiply"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="?attr/colorPrimary"
            android:text="x"
            android:textColor="#edb616"
            android:textSize="18sp"
            android:onClick="pressedButton" />

        <!-- Third Row -->
        <Button
            android:id="@+id/bt4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="?attr/colorPrimary"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:onClick="pressedButton" />

        <Button
            android:id="@+id/bt5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="?attr/colorPrimary"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:onClick="pressedButton" />

        <Button
            android:id="@+id/bt6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="?attr/colorPrimary"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:onClick="pressedButton" />

        <Button
            android:id="@+id/btMinus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="?attr/colorPrimary"
            android:text="-"
            android:textColor="#edb616"
            android:textSize="18sp"
            android:onClick="pressedButton" />

        <!-- Fourth Row -->
        <Button
            android:id="@+id/bt1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="?attr/colorPrimary"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:onClick="pressedButton" />

        <Button
            android:id="@+id/bt2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="?attr/colorPrimary"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:onClick="pressedButton" />

        <Button
            android:id="@+id/bt3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="?attr/colorPrimary"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:onClick="pressedButton" />

        <Button
            android:id="@+id/btPlus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="?attr/colorPrimary"
            android:text="+"
            android:textColor="#edb616"
            android:textSize="18sp"
            android:onClick="pressedButton" />

        <!-- Fifth Row -->
        <Button
            android:id="@+id/btEmpty"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="?attr/colorPrimary"
            android:text=".."
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/bt0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="?attr/colorPrimary"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:onClick="pressedButton" />

        <Button
            android:id="@+id/btComma"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="?attr/colorPrimary"
            android:text=","
            android:textColor="@color/white"
            android:textSize="18sp"
            android:onClick="pressedButton" />

        <Button
            android:id="@+id/btEqual"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="#edb616"
            android:text="="
            android:textColor="@color/white"
            android:textSize="18sp" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
