<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvScreen"
        android:layout_width="335dp"
        android:layout_height="50dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="sans-serif-medium"
        android:text=""
        android:textAlignment="textEnd"
        android:textSize="34sp"
        android:typeface="normal"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="@+id/gridLayout"
        tools:ignore="MissingConstraints" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="450dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="16dp"
        android:columnCount="4"
        android:padding="10dp"
        android:rowCount="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- First Row -->
        <Button
            android:id="@+id/btAc"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="?attr/colorPrimary"
            android:onClick="clearAll"
            android:text="AC"
            android:textColor="#edb616"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btC"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="?attr/colorPrimary"
            android:onClick="clearLast"
            android:text="C"
            android:textColor="#edb616"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btPercent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="?attr/colorPrimary"
            android:text="%"
            android:textColor="#edb616"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btDivide"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="?attr/colorPrimary"
            android:onClick="pressedButton"
            android:text="รท"
            android:textColor="#edb616"
            android:textSize="18sp" />

        <!-- Second Row -->
        <Button
            android:id="@+id/bt7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="?attr/colorPrimary"
            android:onClick="pressedButton"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/bt8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="?attr/colorPrimary"
            android:onClick="pressedButton"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/bt9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="?attr/colorPrimary"
            android:onClick="pressedButton"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btMultiply"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="?attr/colorPrimary"
            android:onClick="pressedButton"
            android:text="x"
            android:textColor="#edb616"
            android:textSize="18sp" />

        <!-- Third Row -->
        <Button
            android:id="@+id/bt4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="?attr/colorPrimary"
            android:onClick="pressedButton"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/bt5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="?attr/colorPrimary"
            android:onClick="pressedButton"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/bt6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="?attr/colorPrimary"
            android:onClick="pressedButton"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btMinus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="?attr/colorPrimary"
            android:onClick="pressedButton"
            android:text="-"
            android:textColor="#edb616"
            android:textSize="18sp" />

        <!-- Fourth Row -->
        <Button
            android:id="@+id/bt1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="?attr/colorPrimary"
            android:onClick="pressedButton"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/bt2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="?attr/colorPrimary"
            android:onClick="pressedButton"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/bt3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="?attr/colorPrimary"
            android:onClick="pressedButton"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btPlus"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="?attr/colorPrimary"
            android:onClick="pressedButton"
            android:text="+"
            android:textColor="#edb616"
            android:textSize="18sp" />

        <!-- Fifth Row -->
        <Button
            android:id="@+id/btEmpty"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="?attr/colorPrimary"
            android:text=".."
            android:textColor="?attr/colorPrimary"
            android:textSize="18sp" />

        <Button
            android:id="@+id/bt0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="?attr/colorPrimary"
            android:onClick="pressedButton"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btDot"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="?attr/colorPrimary"
            android:onClick="pressedButton"
            android:text="."
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btEqual"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="#edb616"
            android:onClick="equalButtonPressed"
            android:text="="
            android:textColor="@color/white"
            android:textSize="18sp" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
